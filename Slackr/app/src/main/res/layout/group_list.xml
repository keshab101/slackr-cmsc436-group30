<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/round_views"
    android:padding="16dp">

    <ImageView
        android:id="@+id/group_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/group_icon"
        android:background="@drawable/gray_tint_background"/>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/test_group"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/group_members"
            android:text="@string/test_group_members"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/group_view_button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_views"
        android:text="View" />


</LinearLayout>

